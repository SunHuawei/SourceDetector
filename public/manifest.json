{
    "manifest_version": 3,
    "name": "Source Collector",
    "version": "1.0.0",
    "description": "Automatically collect and view source maps for web pages",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "webRequest",
        "downloads",
        "unlimitedStorage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/index.js"
            ],
            "type": "module"
        }
    ],
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "128": "icons/icon.svg"
        }
    },
    "icons": {
        "128": "icons/icon.svg"
    },
    "options_page": "pages/settings/index.html",
    "web_accessible_resources": [
        {
            "resources": [
                "js/*.js",
                "js/**/*.js",
                "js/**/*.js.map"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; worker-src 'self'"
    },
    "minimum_chrome_version": "88"
}