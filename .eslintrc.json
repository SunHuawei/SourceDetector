{
    "root": true,
    "env": {
        "browser": true,
        "es2020": true,
        "webextensions": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react-hooks/recommended"
    ],
    "ignorePatterns": [
        "dist",
        ".eslintrc.json"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "react-refresh",
        "@typescript-eslint"
    ],
    "rules": {
        "react-refresh/only-export-components": [
            "warn",
            {
                "allowConstantExport": true
            }
        ],
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}